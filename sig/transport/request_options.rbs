module Algolia
  module Transport
    class RequestOptions

      attr_accessor headers: Hash[String, String]
      attr_accessor params: Hash[Symbol, untyped]
      attr_accessor data: Hash[Symbol, untyped]
      attr_accessor timeout: nil|Integer
      attr_accessor connect_timeout: nil|Integer
      attr_accessor compression_type: String

      def initialize: (Search::Config config) -> void
      def create: (?::Hash[Symbol, String|[String]] opts) -> void
      def add_headers: (?::Hash[Symbol|String, String] opts) -> void
      def add_params: (?::Hash[Symbol, String|[String]] opts) -> void
      def add_timeout: (?::Hash[Symbol, String|[String]] opts) -> void
      def add_connect_timeout: (?::Hash[Symbol, String|[String]] opts) -> void
      def add_compression_type: (?::Hash[Symbol, String|[String]] opts) -> void
      def add_data_body: (?::Hash[Symbol, String|[String]] opts) -> void
    end
  end
end
